{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@cozy/abis/*": ["src/abis/*"],
      "@cozy/components/*": ["src/components/*"],
      "@cozy/hooks/*": ["src/hooks/*"],
      "@cozy/utils/*": ["src/utils/*"],
      "@cozy/tokens/*": ["src/tokens/*"]
    },
    "incremental": true
  },
  "include": ["**/*.ts", "**/*.tsx", "./typechain-types", "./test"],
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts"]
}
